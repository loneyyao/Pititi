<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ptt_root_layout">

    <com.example.lizejun.pttapplication.PttViewPager
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/img_left"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/rc_ptt_go_left" />

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/rc_ptt_go_right" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="60dp"
        android:layout_gravity="bottom"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <ImageView
            android:id="@+id/btn_quite"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/rc_ptt_selector_be_quite"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />



        <ImageView
            android:id="@+id/btn_ptt"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/rc_ptt_violence_break_normal"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/call"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/rc_ptt_selector_voice" />

            <ImageView
                android:id="@+id/call_video"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/rc_ptt_selector_video" />

            <ImageView
                android:id="@+id/open_voice"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/rc_ptt_selector_mianti" />
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/top_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_shutdown"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/rc_ptt_call_close"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/layout_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_group_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rc_ptt_current_group_info"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/img_down"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/rc_ptt_down_arrow"
                    android:tint="#fff"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/img_scale_window"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/rc_ptt_scale_minimize" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                >


            <ImageView
                android:id="@+id/img_urgent"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="7dp"
                android:src="@drawable/rc_ptt_close_camera_normal"/>

            <TextView
                android:id="@+id/text_ptt_people_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rc_ptt_people"
                android:textSize="14sp"
                android:textColor="#fff" />
            </LinearLayout>


            <TextView
                android:id="@+id/text_view_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/rc_ptt_view_member"
                android:textSize="14sp"
                android:textColor="#fff" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_gravity="center_horizontal"

        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/img_speaker"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/rc_ptt_close_camera_normal"/>
        <TextView
            android:id="@+id/text_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:shadowColor="#555"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="@string/rc_ptt_speaker"/>

        <TextView
            android:id="@+id/text_speak_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="#fff"
            android:shadowColor="#555"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="02:45:50"/>
    </LinearLayout>


</FrameLayout>
